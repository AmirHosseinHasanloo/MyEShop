@model DataLayer.Product_Comments


@using (Ajax.BeginForm("CreateComment", "prouduct", FormMethod.Post, new AjaxOptions()
{
    OnSuccess = "success",
    UpdateTargetId = "Comment_Li"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ProductID)
    @Html.HiddenFor(model => model.ParentID)

    <div class="col-md-5">
        <div class="form-group">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", placeholder = "نام خود را وارد کنید" })
            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "ایمیل خود را وارد کنید" })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.TextBoxFor(model => model.WebSite, new { @class = "form-control", placeholder = "وب سایت" })
        </div>
    </div>
    <div class="col-md-7">
        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", placeholder = "دیدگاه خودتان را وارد کنید" })
        @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
        <input class="btn btn-primary" value="ثبت دیدگاه ارزشمند شما" type="submit">
    </div>
    <div class="clearfix"></div>
}



