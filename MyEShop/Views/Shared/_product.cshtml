@model DataLayer.Products
<div class="col-md-4 col-sm-6 col-12">
    <div class="border-radius">
        <span class="img-responsive" style="margin-top:1%;">
            <img class="Thumb img-rounded" src="/Images/ProductImages/Thumbnail/@Model.ImageName">
        </span>
        <h2>
            <a href="/ShowProduct/@Model.ProductID">
                @Model.Title
            </a>
        </h2>
        <h6>افزودن به لیست مقایسه <input type="checkbox" onchange="AddToCompare(@Model.ProductID)"></h6>
        <span class="col-md-9 col-sm-9 col-xs-9 price-layer">
            <label>@Model.Price.ToString("#,0") تومان</label>
        </span>
        <a onclick="AddToCart(@Model.ProductID)" class="col-md-2 col-sm-2 col-xs-2 col-md-offset-1 col-sm-offset-1 col-xs-offset-1 buy-button border-radius">
            <label><i class="fa fa-shopping-basket"></i></label>
        </a>
    </div>
</div>

