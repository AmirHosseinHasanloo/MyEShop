@model IEnumerable<DataLayer.Users>

@{
    ViewBag.Title = "لیست کاربران";
}
<br />
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">افزودن کاربر جدید</a>
    <a href="@Url.Action("Admins")" class="btn btn-info">لیست ادمین های ای شاپ</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Roles.RoleTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Roles.RoleTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                <p>@item.RegisterDate.ToShamsi()</p>
            </td>
            <td>
                <a href="/Admin/Users/Edit/@item.UserID">ویرایش</a> |
                <a href="/Admin/Users/Details/@item.UserID">مشخصات</a> |
                <a href="/Admin/Users/Delete/@item.UserID">حذف</a>
            </td>
        </tr>
    }

</table>
