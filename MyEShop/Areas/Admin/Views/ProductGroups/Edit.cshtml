@model DataLayer.Product_Groups

@{
    ViewBag.Title = "ویرایش";
}
@using (Ajax.BeginForm("Edit","ProductGroups",FormMethod.Post,new AjaxOptions()
{
   OnSuccess = "success",
   UpdateTargetId = "ListGroup"
}))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(G=>G.ParentID)
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.GroupID)
        <div class="form-group">
            @Html.LabelFor(model => model.GroupTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.GroupTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.GroupTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-warning" />
            </div>
        </div>
    </div>
}